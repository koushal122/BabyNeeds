<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#19C6A9"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/EnterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Enter Item"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Entername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EnterText"
                android:hint="Enter name" />

            <EditText
                android:id="@+id/EnterQuantitiy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Entername"
                android:hint="Enter Quantity"
                android:inputType="number" />

            <EditText
                android:id="@+id/EnterColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EnterQuantitiy"
                android:hint="Enter Color" />

            <EditText
                android:id="@+id/EnterSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EnterColor"
                android:hint="Enter Size"
                android:inputType="number" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/savebutton"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EnterSize"
                android:padding="5dp"
                android:text="Save" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>